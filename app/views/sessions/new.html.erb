<h1>signIn</h1>
<%= form_with model: @user, url: sign_in_path do |form| %>
  <div>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :password %><br>
    <%= form.password_field :password %><br>
    <%= link_to "forget password", password_reset_path %>
  </div>

  <div>
    <%= form.submit "sign in"%>
  </div>
<% end %>
